@inject IStringLocalizer<StudentResources> StudentLocalizer
@inject IStringLocalizer<CourseResources> CourseLocalizer
@inject IStringLocalizer<InstructorResources> InstructorLocalizer
@inject IStringLocalizer<DepartmentResources> DepartmentLocalizer
@inject IStringLocalizer<GeneralResources> GeneralLocalizer

<MudNavMenu>
    <MudNavLink Match="NavLinkMatch.All" href="" Icon="fas fa-home">@GeneralLocalizer["Home"]</MudNavLink>
    <MudNavLink Match="NavLinkMatch.All" href="about" Icon="fas fa-info-circle">@GeneralLocalizer["About"]</MudNavLink>
    <MudTooltip Text="@StudentLocalizer["Students"]">
        <MudNavLink Match="NavLinkMatch.All" href="students" Icon="fas fa-user-graduate">@StudentLocalizer["Students"]</MudNavLink>
    </MudTooltip>
    <MudTooltip Text="@CourseLocalizer["Courses"]">
        <MudNavLink Match="NavLinkMatch.All" href="courses" Icon="fas fa-book">@CourseLocalizer["Courses"]</MudNavLink>
    </MudTooltip>
    <MudTooltip Text="@InstructorLocalizer["Instructors"]">
        <MudNavLink Match="NavLinkMatch.All" href="instructors" Icon="fas fa-chalkboard-teacher">@InstructorLocalizer["Instructors"]</MudNavLink>
    </MudTooltip>
    <MudTooltip Text="@DepartmentLocalizer["Departments"]">
        <MudNavLink Match="NavLinkMatch.All" href="departments" Icon="fas fa-building">@DepartmentLocalizer["Departments"]</MudNavLink>
    </MudTooltip>
</MudNavMenu>