@using WebUI.Shared.Courses.Queries.GetCoursesOverview
@page "/courses"
@inject IStringLocalizer<Courses> Localizer

<h2>@Localizer["Courses"]</h2>
<PageTitle>CU - @Localizer["Courses"]</PageTitle>

<p>
    <MudIconButton OnClick="(e => CoursesViewModel.OpenCourseCreate())"
                   Title="@Localizer["Create"]"
                   Variant="Variant.Filled"
                   Icon="fas fa-plus-circle"
                   Color="Color.Primary">
    </MudIconButton>
</p>

<MudTable ServerData="@(new Func<TableState, Task<TableData<CourseVM>>>(CoursesViewModel.ServerReload))"
          Dense="true" Hover="true" FixedFooter="true" Height="500px" @ref="table">
    <ToolBarContent>
        <MudText Typo="Typo.h6">@Localizer["Courses"]</MudText>
        <MudSpacer />
        <MudTextField T="string" Placeholder="@Localizer["Search"]" Adornment="Adornment.Start" @bind-Value="@CoursesViewModel.CoursesOverview.MetaData.SearchString"
                      AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
        <MudIconButton OnClick="CoursesViewModel.Filter"
                       Title="@Localizer["Search"]"
                       Variant="Variant.Filled"
                       Icon="fas fa-search"
                       Color="Color.Primary">
        </MudIconButton>
        <MudIconButton OnClick="CoursesViewModel.BackToFullList"
                       Title="@Localizer["BackToFullList"]"
                       Variant="Variant.Filled"
                       Icon="fas fa-list"
                       Color="Color.Primary">
        </MudIconButton>
    </ToolBarContent>
    <HeaderContent>
        <MudTh><MudTableSortLabel SortLabel="courseid" T="CourseVM">@Localizer["CourseID"]</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortLabel="title" T="CourseVM">@Localizer["Title"]</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortLabel="credits" T="CourseVM">@Localizer["Credits"]</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortLabel="departmentname" T="CourseVM">@Localizer["Department"]</MudTableSortLabel></MudTh>
        <MudTh></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Name">@context.CourseID</MudTd>
        <MudTd DataLabel="Budget">@context.Title</MudTd>
        <MudTd DataLabel="StartDate">@context.Credits</MudTd>
        <MudTd DataLabel="AdministratorName">@context.DepartmentName</MudTd>
        <MudTd DataLabel="">
            <MudIconButton OnClick="(e => CoursesViewModel.OpenCourseEdit(context.CourseID))"
                           Title="@Localizer["Edit"]"
                           Variant="Variant.Filled"
                           Icon="fas fa-edit"
                           Color="Color.Primary" Size="Size.Small">
            </MudIconButton>
            <MudIconButton OnClick="(e => CoursesViewModel.OpenCourseDetails(context.CourseID))"
                           Title="@Localizer["Details"]"
                           Variant="Variant.Filled"
                           Icon="fas fa-eye"
                           Color="Color.Primary" Size="Size.Small">
            </MudIconButton>
            <MudIconButton OnClick=@(e => CoursesViewModel.DeleteCourse(context.CourseID, $"{context.Title}"))
                           Title="@Localizer["Delete"]"
                           Variant="Variant.Filled"
                           Icon="fas fa-trash-alt"
                           Color="Color.Primary" Size="Size.Small">
            </MudIconButton>
        </MudTd>
    </RowTemplate>
    <NoRecordsContent>
        <MudText>@Localizer["NoMatchingRecordsFound"]</MudText>
    </NoRecordsContent>
    <LoadingContent>
        <MudText>@Localizer["Loading"]</MudText>
    </LoadingContent>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>