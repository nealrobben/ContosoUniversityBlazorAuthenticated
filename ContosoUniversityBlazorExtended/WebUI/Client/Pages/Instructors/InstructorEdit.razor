@using WebUI.Client.Components
@inject IStringLocalizer<InstructorResources> InstructorLocalizer
@inject IStringLocalizer<GeneralResources> GeneralLocalizer

<MudDialog>
    <DialogContent>
        @if (InstructorEditViewModel.ErrorVisible)
        {
            <MudAlert Severity="Severity.Error">@GeneralLocalizer["AnErrorOccuredDuringSaving"]</MudAlert>
        }
        <div class="row">
            <div class="col">
                <form asp-action="Create">
                    <EditForm Model=@InstructorEditViewModel.UpdateInstructorCommand OnSubmit=@InstructorEditViewModel.FormSubmitted>
                        <div class="form-group">
                            <label for="LastName">@InstructorLocalizer["LastName"]</label>
                            <InputText @bind-Value=InstructorEditViewModel.UpdateInstructorCommand.LastName class="form-control" id="LastName" />
                            <ValidationMessage For="() => InstructorEditViewModel.UpdateInstructorCommand.LastName" />
                        </div>
                        <div class="form-group">
                            <label for="FirstName">@InstructorLocalizer["FirstName"]</label>
                            <InputText @bind-Value=InstructorEditViewModel.UpdateInstructorCommand.FirstName class="form-control" id="FirstName" />
                            <ValidationMessage For="() => InstructorEditViewModel.UpdateInstructorCommand.FirstName" />
                        </div>
                        <div class="form-group">
                            <label for="HireDate">@InstructorLocalizer["HireDate"]</label>
                            <InputDate @bind-Value=InstructorEditViewModel.UpdateInstructorCommand.HireDate class="form-control" id="HireDate" />
                            <ValidationMessage For="() => InstructorEditViewModel.UpdateInstructorCommand.HireDate" />
                        </div>
                        <div class="form-group">
                            <label for="OfficeLocation">@InstructorLocalizer["OfficeLocation"]</label>
                            <InputText @bind-Value=InstructorEditViewModel.UpdateInstructorCommand.OfficeLocation class="form-control" id="OfficeLocation" />
                            <ValidationMessage For="() => InstructorEditViewModel.UpdateInstructorCommand.OfficeLocation" />
                        </div>
                        <div>
                            <InputFile id="fileInput" OnChange="InstructorEditViewModel.UploadFiles" hidden />
                            <MudButton HtmlTag="label"
                                       Color="Color.Primary"
                                       StartIcon="@Icons.Filled.CloudUpload"
                                       for="fileInput">
                                Upload Files
                            </MudButton>
                            @if (InstructorEditViewModel.files != null)
                            {
                                <MudList>
                                    @foreach (var file in InstructorEditViewModel.files)
                                    {
                                        <MudListItem Icon="@Icons.Filled.AttachFile" @key="@file">
                                            @file.Name <code>@file.Size bytes</code>
                                        </MudListItem>
                                    }
                                </MudList>
                            }
                        </div>
                        <MudButton ButtonType="ButtonType.Submit"
                                   StartIcon="fas fa-save"
                                   Color="Color.Primary">@GeneralLocalizer["Save"]</MudButton>
                        <MudButton Color="Color.Primary" OnClick="InstructorEditViewModel.Cancel">@GeneralLocalizer["Cancel"]</MudButton>
                    </EditForm>
                </form>
            </div>
            <div class="col">
                <ProfilePicture FileName="@InstructorEditViewModel?.UpdateInstructorCommand?.ProfilePictureName" />
            </div>
        </div>
    </DialogContent>
</MudDialog>