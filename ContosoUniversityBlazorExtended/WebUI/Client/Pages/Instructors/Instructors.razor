@using WebUI.Shared.Instructors.Queries.GetInstructorsOverview
@page "/instructors"

<h2>Instructors</h2>

<p>
    <MudIconButton OnClick="(e => InstructorsViewModel.OpenCreateInstructor())"
                   Title="Create"
                   Variant="Variant.Filled"
                   Icon="fas fa-plus-circle"
                   Color="Color.Primary">
    </MudIconButton>
</p>

<MudTable ServerData="@(new Func<TableState, Task<TableData<InstructorVM>>>(InstructorsViewModel.ServerReload))"
          Dense="true" Hover="true" FixedFooter="true" Height="500px" @ref="table">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Departments</MudText>
        <MudSpacer />
        <MudTextField T="string" Placeholder="Search" Adornment="Adornment.Start" @bind-Value="@InstructorsViewModel.InstructorsOverview.MetaData.SearchString"
                      AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
        <MudIconButton OnClick="InstructorsViewModel.Filter"
                       Title="Search"
                       Variant="Variant.Filled"
                       Icon="fas fa-search"
                       Color="Color.Primary">
        </MudIconButton>
        <MudIconButton OnClick="InstructorsViewModel.BackToFullList"
                       Title="Back to Full List"
                       Variant="Variant.Filled"
                       Icon="fas fa-list"
                       Color="Color.Primary">
        </MudIconButton>
    </ToolBarContent>
    <HeaderContent>
        <MudTh><MudTableSortLabel SortLabel="lastname" T="InstructorVM">Last name</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortLabel="firstname" T="InstructorVM">First name</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortLabel="hiredate" T="InstructorVM">Hire date</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortLabel="office" T="InstructorVM">Office</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortLabel="courses" T="InstructorVM">Courses</MudTableSortLabel></MudTh>
        <MudTh></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="LastName">@context.LastName</MudTd>
        <MudTd DataLabel="FirstName">@context.FirstName</MudTd>
        <MudTd DataLabel="HireDate">@context.HireDate</MudTd>
        <MudTd DataLabel="Office">@context.OfficeLocation</MudTd>
        <MudTd DataLabel="Courses"></MudTd>
        <MudTd DataLabel="">
            <MudIconButton OnClick=@(e => InstructorsViewModel.SelectInstructor(context.InstructorID))
                           Title="Select"
                           Variant="Variant.Filled"
                           Icon="fas fa-hand-pointer"
                           Color="Color.Primary" Size="Size.Small">
            </MudIconButton>
            <MudIconButton OnClick="(e => InstructorsViewModel.OpenInstructorEdit(context.InstructorID))"
                           Title="Edit"
                           Variant="Variant.Filled"
                           Icon="fas fa-edit"
                           Color="Color.Primary" Size="Size.Small">
            </MudIconButton>
            <MudIconButton OnClick="(e => InstructorsViewModel.OpenInstructorDetails(context.InstructorID))"
                           Title="Details"
                           Variant="Variant.Filled"
                           Icon="fas fa-eye"
                           Color="Color.Primary" Size="Size.Small">
            </MudIconButton>
            <MudIconButton OnClick=@(e =>
                InstructorsViewModel.DeleteInstructor(context.InstructorID, $"{context.FirstName} {context.LastName}"))
                           Title="Delete"
                           Variant="Variant.Filled"
                           Icon="fas fa-trash-alt"
                           Color="Color.Primary" Size="Size.Small">
            </MudIconButton>
        </MudTd>
    </RowTemplate>
    <NoRecordsContent>
        <MudText>No matching records found</MudText>
    </NoRecordsContent>
    <LoadingContent>
        <MudText>Loading...</MudText>
    </LoadingContent>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>

@if (InstructorsViewModel.InstructorsOverview == null)
{
    <div class="d-flex justify-content-center">
        <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
    </div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Hire Date</th>
                <th>Office</th>
                <th>Courses</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @if (InstructorsViewModel.InstructorsOverview != null)
            {
                @foreach (var item in InstructorsViewModel.InstructorsOverview.Instructors)
                {
                    string selectedRow = "";
                    if (InstructorsViewModel.SelectedInstructorId.HasValue && item.InstructorID == InstructorsViewModel.SelectedInstructorId.Value)
                    {
                        selectedRow = "mud-theme-primary";
                    }

                    <tr class="@selectedRow">
                        <td>
                            @item.LastName
                        </td>
                        <td>
                            @item.FirstName
                        </td>
                        <td>
                            @item.HireDate.ToShortDateString()
                        </td>
                        <td>
                            @item.OfficeLocation
                        </td>
                        <td>
                            @{
                                foreach (var course in item.CourseAssignments)
                                {
                                    @course.CourseID @:  @course.CourseTitle <br />
                                }
                            }
                        </td>
                        <td>
                            <MudIconButton OnClick=@(e => InstructorsViewModel.SelectInstructor(item.InstructorID))
                                           Title="Select"
                                           Variant="Variant.Filled"
                                           Icon="fas fa-hand-pointer"
                                           Color="Color.Primary" Size="Size.Small">
                            </MudIconButton>
                            <MudIconButton OnClick="(e => InstructorsViewModel.OpenInstructorEdit(item.InstructorID))"
                                           Title="Edit"
                                           Variant="Variant.Filled"
                                           Icon="fas fa-edit"
                                           Color="Color.Primary" Size="Size.Small">
                            </MudIconButton>
                            <MudIconButton OnClick="(e => InstructorsViewModel.OpenInstructorDetails(item.InstructorID))"
                                           Title="Details"
                                           Variant="Variant.Filled"
                                           Icon="fas fa-eye"
                                           Color="Color.Primary" Size="Size.Small">
                            </MudIconButton>
                            <MudIconButton OnClick=@(e => InstructorsViewModel.DeleteInstructor(item.InstructorID, $"{item.FirstName} {item.LastName}"))
                                           Title="Delete"
                                           Variant="Variant.Filled"
                                           Icon="fas fa-trash-alt"
                                           Color="Color.Primary" Size="Size.Small">
                            </MudIconButton>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>

    @if (InstructorsViewModel.CourseForInstructorOverview != null)
    {
        <h3>Courses Taught by Selected Instructor</h3>
        <table class="table">
            <tr>
                <th></th>
                <th>Number</th>
                <th>Title</th>
                <th>Department</th>
            </tr>

            @foreach (var item in InstructorsViewModel.CourseForInstructorOverview.Courses)
            {
                string selectedRow = "";
                if (InstructorsViewModel.SelectedCourseId.HasValue && item.CourseID == InstructorsViewModel.SelectedCourseId.Value)
                {
                    selectedRow = "mud-theme-primary";
                }
                <tr class="@selectedRow">
                    <td>
                        <MudIconButton OnClick=@(e => InstructorsViewModel.SelectCourse(item.CourseID))
                                       Title="Select"
                                       Variant="Variant.Filled"
                                       Icon="fas fa-hand-pointer"
                                       Color="Color.Primary" Size="Size.Small">
                        </MudIconButton>
                    </td>
                    <td>
                        @item.CourseID
                    </td>
                    <td>
                        @item.Title
                    </td>
                    <td>
                        @item.DepartmentName
                    </td>
                </tr>
            }

        </table>

        <MudTable Items="InstructorsViewModel.CourseForInstructorOverview.Courses" Dense="true" Hover="true" Breakpoint="Breakpoint.Sm">
            <HeaderContent>
                <MudTh>Number</MudTh>
                <MudTh>Title</MudTh>
                <MudTh>Department</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd>@context.CourseID</MudTd>
                <MudTd>@context.Title</MudTd>
                <MudTd>@context.DepartmentName</MudTd>
            </RowTemplate>
        </MudTable>
    }

    @if (InstructorsViewModel.StudentsForCourse != null)
    {
        <h3>
            Students Enrolled in Selected Course
        </h3>

        <MudTable Items="InstructorsViewModel.StudentsForCourse.Students" Dense="true" Hover="true" Breakpoint="Breakpoint.Sm">
            <HeaderContent>
                <MudTh>Name</MudTh>
                <MudTh>Grade</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd>@context.StudentName</MudTd>
                <MudTd>@context.StudentGrade</MudTd>
            </RowTemplate>
        </MudTable>
    }
}