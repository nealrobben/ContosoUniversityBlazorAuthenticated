@using WebUI.Shared.Instructors.Queries.GetInstructorsOverview
@page "/instructors"
@inject IStringLocalizer<Instructors> Localizer

<h2>@Localizer["Instructors"]</h2>
<PageTitle>CU - @Localizer["Instructors"]</PageTitle>

<p>
    <MudIconButton OnClick="(e => InstructorsViewModel.OpenCreateInstructor())"
                   Title="@Localizer["Create"]"
                   Variant="Variant.Filled"
                   Icon="fas fa-plus-circle"
                   Color="Color.Primary">
    </MudIconButton>
</p>

<MudTable ServerData="@(new Func<TableState, Task<TableData<InstructorVM>>>(InstructorsViewModel.ServerReload))"
          Dense="true" Hover="true" FixedFooter="true" Height="500px" @ref="table" RowClassFunc="@InstructorsViewModel.InstructorsSelectRowClassFunc">
    <ToolBarContent>
        <MudText Typo="Typo.h6">@Localizer["Instructors"]</MudText>
        <MudSpacer />
        <MudTextField T="string" Placeholder="@Localizer["Search"]" Adornment="Adornment.Start" @bind-Value="@InstructorsViewModel.InstructorsOverview.MetaData.SearchString"
                      AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
        <MudIconButton OnClick="InstructorsViewModel.Filter"
                       Title="@Localizer["Search"]"
                       Variant="Variant.Filled"
                       Icon="fas fa-search"
                       Color="Color.Primary">
        </MudIconButton>
        <MudIconButton OnClick="InstructorsViewModel.BackToFullList"
                       Title="@Localizer["BackToFullList"]"
                       Variant="Variant.Filled"
                       Icon="fas fa-list"
                       Color="Color.Primary">
        </MudIconButton>
    </ToolBarContent>
    <HeaderContent>
        <MudTh><MudTableSortLabel SortLabel="lastname" T="InstructorVM">@Localizer["LastName"]</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortLabel="firstname" T="InstructorVM">@Localizer["FirstName"]</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortLabel="hiredate" T="InstructorVM">@Localizer["HireDate"]</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortLabel="office" T="InstructorVM">@Localizer["OfficeLocation"]</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortLabel="courses" T="InstructorVM">@Localizer["Courses"]</MudTableSortLabel></MudTh>
        <MudTh></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="LastName">@context.LastName</MudTd>
        <MudTd DataLabel="FirstName">@context.FirstName</MudTd>
        <MudTd DataLabel="HireDate">@context.HireDate</MudTd>
        <MudTd DataLabel="Office">@context.OfficeLocation</MudTd>
        <MudTd DataLabel="Courses"></MudTd>
        <MudTd DataLabel="">
            <MudIconButton OnClick=@(e => InstructorsViewModel.SelectInstructor(context.InstructorID))
                           Title="@Localizer["Select"]"
                           Variant="Variant.Filled"
                           Icon="fas fa-hand-pointer"
                           Color="Color.Primary" Size="Size.Small">
            </MudIconButton>
            <MudIconButton OnClick="(e => InstructorsViewModel.OpenInstructorEdit(context.InstructorID))"
                           Title="@Localizer["Edit"]"
                           Variant="Variant.Filled"
                           Icon="fas fa-edit"
                           Color="Color.Primary" Size="Size.Small">
            </MudIconButton>
            <MudIconButton OnClick="(e => InstructorsViewModel.OpenInstructorDetails(context.InstructorID))"
                           Title="@Localizer["Details"]"
                           Variant="Variant.Filled"
                           Icon="fas fa-eye"
                           Color="Color.Primary" Size="Size.Small">
            </MudIconButton>
            <MudIconButton OnClick=@(e =>
                InstructorsViewModel.DeleteInstructor(context.InstructorID, $"{context.FirstName} {context.LastName}"))
                           Title="@Localizer["Delete"]"
                           Variant="Variant.Filled"
                           Icon="fas fa-trash-alt"
                           Color="Color.Primary" Size="Size.Small">
            </MudIconButton>
        </MudTd>
    </RowTemplate>
    <NoRecordsContent>
        <MudText>@Localizer["NoMatchingRecordsFound"]</MudText>
    </NoRecordsContent>
    <LoadingContent>
        <MudText>@Localizer["Loading"]</MudText>
    </LoadingContent>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>

@if (InstructorsViewModel.CourseForInstructorOverview != null)
{
    <br />
    <h3>@Localizer["CoursesTaughtByInstructor"]</h3>

    <MudTable Items="InstructorsViewModel.CourseForInstructorOverview.Courses" Dense="true" Hover="true" Breakpoint="Breakpoint.Sm"
              RowClassFunc="@InstructorsViewModel.CoursesSelectRowClassFunc">
        <HeaderContent>
            <MudTh></MudTh>
            <MudTh>@Localizer["CourseID"]</MudTh>
            <MudTh>@Localizer["Title"]</MudTh>
            <MudTh>@Localizer["Department"]</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>
                <MudIconButton OnClick=@(e => InstructorsViewModel.SelectCourse(context.CourseID))
                               Title="@Localizer["Select"]"
                               Variant="Variant.Filled"
                               Icon="fas fa-hand-pointer"
                               Color="Color.Primary" Size="Size.Small">
                </MudIconButton>
            </MudTd>
            <MudTd>@context.CourseID</MudTd>
            <MudTd>@context.Title</MudTd>
            <MudTd>@context.DepartmentName</MudTd>
        </RowTemplate>
    </MudTable>
}

@if (InstructorsViewModel.StudentsForCourse != null)
{
    <br />
    <h3>
        @Localizer["StudentsEnrolledInCourse"]
    </h3>

    <MudTable Items="InstructorsViewModel.StudentsForCourse.Students" Dense="true" Hover="true" Breakpoint="Breakpoint.Sm">
        <HeaderContent>
            <MudTh>@Localizer["StudentName"]</MudTh>
            <MudTh>@Localizer["StudentGrade"]</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>@context.StudentName</MudTd>
            <MudTd>@context.StudentGrade</MudTd>
        </RowTemplate>
    </MudTable>
}
