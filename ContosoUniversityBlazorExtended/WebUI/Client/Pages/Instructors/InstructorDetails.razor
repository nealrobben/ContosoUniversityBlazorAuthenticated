@page "/instructors/{id}"

<h1>Details</h1>

<div>
    <h4>Instructor</h4>
    <hr />
    <div class="row">
        <div class="col">
            <dl class="row">
                <dt class="col-sm-2">
                    LastName
                </dt>
                <dd class="col-sm-10">
                    @if (InstructorDetailsViewModel.Instructor != null)
                    {
                        @InstructorDetailsViewModel.Instructor.LastName
                    }
                </dd>
                <dt class="col-sm-2">
                    FirstName
                </dt>
                <dd class="col-sm-10">
                    @if (InstructorDetailsViewModel.Instructor != null)
                    {
                        @InstructorDetailsViewModel.Instructor.FirstName
                    }
                </dd>
                <dt class="col-sm-2">
                    HireDate
                </dt>
                <dd class="col-sm-10">
                    @if (InstructorDetailsViewModel.Instructor != null)
                    {
                        @InstructorDetailsViewModel.Instructor.HireDate.ToShortDateString()
                    }
                </dd>
            </dl>
        </div>
        <div class="col">
            <div>
                <img src="img/person.png" class="border" />
            </div>
        </div>
    </div>
</div>
<div>
    <MudIconButton Link="/instructors"
                   Title="Back to list"
                   Variant="Variant.Filled"
                   Icon="fas fa-arrow-circle-left"
                   Color="Color.Primary">
    </MudIconButton>
    @if (InstructorDetailsViewModel.Instructor != null)
    {
        <MudButton Link="@($"/instructors/edit/{InstructorDetailsViewModel.Instructor.InstructorID}")"
                   Variant="Variant.Filled"
                   StartIcon="fas fa-edit"
                   Color="Color.Primary">Edit</MudButton>
    }
</div>