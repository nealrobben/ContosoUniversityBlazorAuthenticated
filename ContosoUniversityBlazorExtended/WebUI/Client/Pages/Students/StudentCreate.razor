@inject IStringLocalizer<StudentResources> StudentLocalizer
@inject IStringLocalizer<GeneralResources> GeneralLocalizer

<MudDialog>
    <DialogContent>
        @if (StudentCreateViewModel.ErrorVisible)
        {
            <MudAlert Severity="Severity.Error">@GeneralLocalizer["AnErrorOccuredDuringSaving"]</MudAlert>
        }
        <div class="row">
            <div class="col-md-12">
                <EditForm Model=@StudentCreateViewModel.CreateStudentCommand OnSubmit=@StudentCreateViewModel.FormSubmitted>
                    <DataAnnotationsValidator />
                    <div class="form-group">
                        <label for="LastName">@StudentLocalizer["LastName"]</label>
                        <InputText @bind-Value=StudentCreateViewModel.CreateStudentCommand.LastName class="form-control" id="LastName" />
                        <ValidationMessage For="() => StudentCreateViewModel.CreateStudentCommand.LastName" />
                    </div>
                    <div class="form-group">
                        <label for="FirstName">@StudentLocalizer["FirstName"]</label>
                        <InputText @bind-Value=StudentCreateViewModel.CreateStudentCommand.FirstName class="form-control" id="FirstName" />
                        <ValidationMessage For="() => StudentCreateViewModel.CreateStudentCommand.FirstName" />
                    </div>
                    <div class="form-group">
                        <label for="EnrollmentDate">@StudentLocalizer["EnrollmentDate"]</label>
                        <InputDate @bind-Value=StudentCreateViewModel.CreateStudentCommand.EnrollmentDate class="form-control" id="EnrollmentDate" />
                        <ValidationMessage For="() => StudentCreateViewModel.CreateStudentCommand.EnrollmentDate" />
                    </div>
                    <div>
                        <InputFile id="fileInput" OnChange="StudentCreateViewModel.UploadFiles" hidden />
                        <MudButton HtmlTag="label"
                                   Color="Color.Primary"
                                   StartIcon="@Icons.Filled.CloudUpload"
                                   for="fileInput">
                            Upload Files
                        </MudButton>
                        @if (StudentCreateViewModel.files != null)
                        {
                            <MudList>
                                @foreach (var file in StudentCreateViewModel.files)
                                {
                                    <MudListItem Icon="@Icons.Filled.AttachFile" @key="@file">
                                        @file.Name <code>@file.Size bytes</code>
                                    </MudListItem>
                                }
                            </MudList>
                        }
                    </div>
                    <MudButton ButtonType="ButtonType.Submit"
                               StartIcon="fas fa-save"
                               Color="Color.Primary">@GeneralLocalizer["Create"]</MudButton>
                    <MudButton Color="Color.Primary" OnClick="StudentCreateViewModel.Cancel">@GeneralLocalizer["Cancel"]</MudButton>
                </EditForm>
            </div>
        </div>
    </DialogContent>
</MudDialog>