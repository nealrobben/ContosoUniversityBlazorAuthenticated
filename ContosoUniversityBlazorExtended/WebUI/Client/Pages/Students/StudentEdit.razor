<MudDialog>
    <DialogContent>
        @if (StudentEditViewModel.ErrorVisible)
        {
            <MudAlert Severity="Severity.Error">An error occurred during saving</MudAlert>
        }
        <div class="row">
            <div class="col-md-12">
                <EditForm Model=@StudentEditViewModel.UpdateStudentCommand OnSubmit=@StudentEditViewModel.FormSubmitted>
                    <DataAnnotationsValidator />
                    <div class="form-group">
                        <label for="LastName">LastName</label>
                        <InputText @bind-Value=StudentEditViewModel.UpdateStudentCommand.LastName class="form-control" id="LastName" />
                        <ValidationMessage For="() => StudentEditViewModel.UpdateStudentCommand.LastName" />
                    </div>
                    <div class="form-group">
                        <label for="FirstName">FirstName</label>
                        <InputText @bind-Value=StudentEditViewModel.UpdateStudentCommand.FirstName class="form-control" id="FirstName" />
                        <ValidationMessage For="() => StudentEditViewModel.UpdateStudentCommand.FirstName" />
                    </div>
                    <div class="form-group">
                        <label for="EnrollmentDate">EnrollmentDate</label>
                        <InputDate @bind-Value=StudentEditViewModel.UpdateStudentCommand.EnrollmentDate class="form-control" id="EnrollmentDate" />
                        <ValidationMessage For="() => StudentEditViewModel.UpdateStudentCommand.EnrollmentDate" />
                    </div>
                    <MudButton ButtonType="ButtonType.Submit"
                               StartIcon="fas fa-save"
                               Color="Color.Primary">Save</MudButton>
                    <MudButton Color="Color.Primary" OnClick="StudentEditViewModel.Cancel">Cancel</MudButton>
                </EditForm>
            </div>
        </div>
    </DialogContent>
</MudDialog>