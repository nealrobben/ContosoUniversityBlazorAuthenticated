@inject IStringLocalizer<DepartmentResources> DepartmentLocalizer
@inject IStringLocalizer<DepartmentDetails> Localizer

<MudDialog>
    <DialogContent>
        <div>
            <dl class="row">
                <dt class="col-sm-4">
                    @Localizer["Name"]
                </dt>
                <dd class="col-sm-8">
                    @if (DepartmentDetailsViewModel.Department != null)
                    {
                        @DepartmentDetailsViewModel.Department.Name
                    }
                </dd>
                <dt class="col-sm-4">
                    @Localizer["Budget"]
                </dt>
                <dd class="col-sm-8">
                    @if (DepartmentDetailsViewModel.Department != null)
                    {
                        @DepartmentDetailsViewModel.Department.Budget.ToString("F")
                    }
                </dd>
                <dt class="col-sm-4">
                    @Localizer["StartDate"]
                </dt>
                <dd class="col-sm-8">
                    @if (DepartmentDetailsViewModel.Department != null)
                    {
                        @DepartmentDetailsViewModel.Department.StartDate.ToShortDateString()
                    }
                </dd>
                <dt class="col-sm-4">
                    @Localizer["AdministratorName"]
                </dt>
                <dd class="col-sm-8">
                    @if (DepartmentDetailsViewModel.Department != null)
                    {
                        @DepartmentDetailsViewModel.Department.AdministratorName
                    }
                </dd>
            </dl>
        </div>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="DepartmentDetailsViewModel.Close">@Localizer["OK"]</MudButton>
    </DialogActions>
</MudDialog>
