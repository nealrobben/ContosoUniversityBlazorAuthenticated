@page "/departments/{id}"

<h1>Details</h1>

<div>
    <h4>Department</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @if (DepartmentDetailsViewModel.Department != null)
            {
                @DepartmentDetailsViewModel.Department.Name
            }
        </dd>
        <dt class="col-sm-2">
            Budget
        </dt>
        <dd class="col-sm-10">
            @if (DepartmentDetailsViewModel.Department != null)
            {
                @DepartmentDetailsViewModel.Department.Budget.ToString("F")
            }
        </dd>
        <dt class="col-sm-2">
            StartDate
        </dt>
        <dd class="col-sm-10">
            @if (DepartmentDetailsViewModel.Department != null)
            {
                @DepartmentDetailsViewModel.Department.StartDate.ToShortDateString()
            }
        </dd>
        <dt class="col-sm-2">
            AdministratorName
        </dt>
        <dd class="col-sm-10">
            @if (DepartmentDetailsViewModel.Department != null)
            {
                @DepartmentDetailsViewModel.Department.AdministratorName
            }
        </dd>
    </dl>
</div>
<div>
    @if (DepartmentDetailsViewModel.Department != null)
    {
        <a href=@($"/departments/edit/{DepartmentDetailsViewModel.Department.DepartmentID}")>Edit</a>
    }
    <a href="/departments">Back to List</a>
</div>
