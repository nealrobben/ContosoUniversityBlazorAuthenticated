<MudDialog>
    <DialogContent>
        @if (ErrorVisible)
        {
            <MudAlert Severity="Severity.Error">@Localizer["AnErrorOccuredDuringSaving"]</MudAlert>
        }
        <div class="row">
            <div class="col-md-12">
                <EditForm Model=@CreateStudentInputModel OnSubmit=@FormSubmitted>
                    <FluentValidationValidator DisableAssemblyScanning="true" />
                    <div class="form-group">
                        <label for="LastName">@Localizer["LastName"]</label>
                        <InputText @bind-Value=CreateStudentInputModel.LastName class="form-control" id="LastName" />
                        <ValidationMessage For="() => CreateStudentInputModel.LastName" />
                    </div>
                    <div class="form-group">
                        <label for="FirstName">@Localizer["FirstName"]</label>
                        <InputText @bind-Value=CreateStudentInputModel.FirstName class="form-control" id="FirstName" />
                        <ValidationMessage For="() => CreateStudentInputModel.FirstName" />
                    </div>
                    <div class="form-group">
                        <label for="EnrollmentDate">@Localizer["EnrollmentDate"]</label>
                        <InputDate @bind-Value=CreateStudentInputModel.EnrollmentDate class="form-control" id="EnrollmentDate" />
                        <ValidationMessage For="() => CreateStudentInputModel.EnrollmentDate" />
                    </div>
                    <div>
                        <InputFile id="fileInput" OnChange="UploadFiles" hidden />
                        <MudButton HtmlTag="label"
                                   Color="Color.Primary"
                                   StartIcon="@Icons.Material.Filled.CloudUpload"
                                   for="fileInput">
                            @Localizer["UploadFiles"]
                        </MudButton>
                        @if (File != null)
                        {
                            <MudList T="IBrowserFile">
                                <MudListItem Icon="@Icons.Material.Filled.AttachFile" @key="@File">
                                        @File.Name <code>@File.Size bytes</code>
                                </MudListItem>
                            </MudList>
                        }
                    </div>
                    <MudButton ButtonType="ButtonType.Submit"
                               StartIcon="fas fa-save"
                               Color="Color.Primary">@Localizer["Create"]</MudButton>
                    <MudButton Color="Color.Primary" OnClick="Cancel">@Localizer["Cancel"]</MudButton>
                </EditForm>
            </div>
        </div>
    </DialogContent>
</MudDialog>